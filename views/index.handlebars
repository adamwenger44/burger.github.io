<h2>Burgers that have not been devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burger}}
    {{#if devour}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add</button>
</form>
